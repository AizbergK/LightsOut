<Page x:Class="LightsOut.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LightsOut"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <StackPanel Height="auto" Width="auto" 
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
        <TextBlock x:Name="Titlu" Width="auto"  FontSize="25"
            HorizontalAlignment="Center">
            Settings
        </TextBlock>
        <Grid HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Margin="0,0,0,0" Width="40" HorizontalAlignment="Left">Width:</TextBlock>
            <Button Margin="45,0,0,0" Width="20" HorizontalAlignment="Left">-</Button>
            <TextBlock Margin="72,0,0,0" Width="10" HorizontalAlignment="Left">3</TextBlock>
            <Button Margin="85,0,0,0" Width="20" HorizontalAlignment="Left">+</Button>
        </Grid>
        <Grid HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Margin="0,0,0,0" Width="40" HorizontalAlignment="Left">Height:</TextBlock>
            <Button Margin="45,0,0,0" Width="20" HorizontalAlignment="Left">-</Button>
            <TextBlock Margin="72,0,0,0" Width="10" HorizontalAlignment="Left">3</TextBlock>
            <Button Margin="85,0,0,0" Width="20" HorizontalAlignment="Left">+</Button>
        </Grid>
        <Button Width="100" Margin="0,10,0,0" Click="BackClick">
            Save
        </Button>
    </StackPanel>
</Page>
