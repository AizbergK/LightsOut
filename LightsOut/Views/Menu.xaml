<Page x:Class="LightsOut.Views.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LightsOut.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid Margin="5">
            <Image x:Name="PfpUser" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock x:Name="Username" Width="auto" Height="24"  FontSize="20" VerticalAlignment="Top" Margin="27,0,0,0"
            HorizontalAlignment="Left">
            Username
            </TextBlock>
        </Grid>
        <StackPanel Height="auto" Width="auto" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock x:Name="Titlu" Width="auto"  FontSize="25"
                HorizontalAlignment="Center">
                Menu
            </TextBlock>


            <Button Width="100" Margin="0,10,0,0" Click="StartGameClick">
                Start Game
            </Button>
            <Button Width="100" Margin="0,10,0,0" Click="StatisticsClick">
                Statistics
            </Button>
            <Button Width="100" Margin="0,10,0,0" Click="SettingsClick">
                Settings
            </Button>
            <Button Width="100" Margin="0,10,0,0" Click="AboutClick">
                About
            </Button>
            <Button Width="100" Margin="0,10,0,0" Click="ExitClick">
                Exit
            </Button>
            <Button Width="100" Margin="0,10,0,0" Click="DeleteClick">
                Delete Account
            </Button>
        </StackPanel>
    </Grid>

</Page>
