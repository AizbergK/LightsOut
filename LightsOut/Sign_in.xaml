<Page x:Class="LightsOut.Sign_in"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LightsOut"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Sign_in">

    <StackPanel Height="auto" Width="auto" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <TextBlock x:Name="Titlu" Width="auto"  FontSize="25"
            HorizontalAlignment="Center">
            Lights Out!
        </TextBlock>
        <TextBlock x:Name="Signin" Width="auto" FontSize="20"
            Margin="0,10,0,0">
            Log-in/Sign-up
        </TextBlock>

        <TextBlock x:Name="Username" Width="auto"
            Margin="0,10,0,0">
            Username
        </TextBlock>
        <Grid HorizontalAlignment="Left">
            <ComboBox Width="20" Height="20" HorizontalAlignment="Left">
                <TextBlock>avatar1</TextBlock>
                <TextBlock>avatar2</TextBlock>
                <TextBlock>avatar3</TextBlock>
                <TextBlock>avatar4</TextBlock>
            </ComboBox>
            <TextBox x:Name="UsernameBox" Width="150" HorizontalAlignment="Left" Margin="25,0,0,0"/>
        </Grid>

        <Button Width="100" Margin="0,10,0,0" Click="LogInClick">
            Log-in
        </Button>
        <Button Width="100" Margin="0,10,0,0" Click="SignUpClick">
            Sign-up
        </Button>
    </StackPanel>
</Page>
